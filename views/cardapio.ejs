<!DOCTYPE html>
<html lang="en">
<%- include('includes/head', {title: "Cardápio"}) %>
<body>
    <%- include('includes/header') %>
    <main class="container mt-5">
        <div class="row">
            <% listaDePizza.forEach((pizza, index) => { %>
                <div class="col-md-4 p-2">
                    <div class="card">
                        <img src="/img/<%= pizza.img %> " alt="Foto da pizza" class="card-img-top">
                        <div class="card-body">
                        <h5 class="card-title"><%= pizza.nome %></h5>
                        <p>Preço da pizza: <%= pizza.preco %>  </p>
                        <button class="btn btn-success">Comprar</button>
                        </div>
                        <div class="card-footer d-flex">
                            <form action="/cardapio/apagar/<%= index %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-warning">Excluir</button>
                            </form>
                            <a href="/cardapio/editar/<%= index %>" class="btn btn-primary ml-1">Editar</a>
                        </div>
                    </div>
                </div>
            <% }) %> 
        
        </div>
    </main>
</body>
</html>